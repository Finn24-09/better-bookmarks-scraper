{
  "name": "better-bookmarks-scraper",
  "version": "1.0.0",
  "description": "Fast, lightweight screenshot API service for better bookmarks scraping",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest",
    "docker:build": "docker build -t better-bookmarks-scraper .",
    "docker:run": "docker run -p 8080:8080 better-bookmarks-scraper",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "screenshot",
    "api",
    "puppeteer",
    "bookmarks",
    "scraper",
    "docker"
  ],
  "author": "Finn24-09",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "puppeteer": "^24.9.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.30",
    "jest": "^30.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=18"
  },
  "overrides": {
    "glob": "^10.4.5",
    "inflight": "npm:@npmcli/promise-spawn@^7.0.0"
  }
}
